<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"
        [<!ENTITY identifiableProperties SYSTEM "classpath://org/hisp/dhis/common/identifiableProperties.hbm">]
        >

<hibernate-mapping>
    <class name="org.hisp.dhis.relationship.RelationshipType" table="relationshiptype">

        <cache usage="read-write"/>

        <id name="id" column="relationshiptypeid">
            <generator class="native"/>
        </id>
        &identifiableProperties;

        <property name="name" column="name" not-null="true" unique="true" length="230"/>

        <many-to-one name="fromConstraint" class="org.hisp.dhis.relationship.RelationshipConstraint"
                     column="left_relationshipconstraintid"
                     foreign-key="fk_relationshiptype_left_relationshipconstraintid"
                     not-null="false"
                     unique="true"
                     cascade="all-delete-orphan"/>

        <many-to-one name="toConstraint" class="org.hisp.dhis.relationship.RelationshipConstraint"
                     column="right_relationshipconstraintid"
                     foreign-key="fk_relationshiptype_right_relationshipconstraintid"
                     not-null="false"
                     unique="true"
                     cascade="all-delete-orphan"/>

        <!-- Object Translation -->
        <set name="translations" table="relationshiptypetranslations" cascade="all-delete-orphan">
            <cache usage="read-write"/>
            <key column="relationshiptypeid" foreign-key="fk_objecttranslation_relationshiptypeid"/>
            <many-to-many class="org.hisp.dhis.translation.ObjectTranslation" column="objecttranslationid"
                          unique="true"/>
        </set>

    </class>

</hibernate-mapping>
